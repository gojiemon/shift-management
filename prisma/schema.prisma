generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String
  role         String   @default("STAFF") // "ADMIN" | "STAFF"
  loginId      String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  availabilities Availability[]
  submissions    Submission[]
  assignments    ShiftAssignment[]
  lineLink       LineLink?
  lineLinkCodes  LineLinkCode[]
  sessions       Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model ShiftPeriod {
  id          String    @id @default(cuid())
  startDate   DateTime
  endDate     DateTime
  deadlineAt  DateTime?
  isOpen      Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())

  availabilities Availability[]
  submissions    Submission[]
  assignments    ShiftAssignment[]
}

model Availability {
  id          String      @id @default(cuid())
  periodId    String
  period      ShiftPeriod @relation(fields: [periodId], references: [id], onDelete: Cascade)
  staffUserId String
  staff       User        @relation(fields: [staffUserId], references: [id], onDelete: Cascade)
  date        DateTime
  status      String // "UNAVAILABLE" | "AVAILABLE" | "FREE" | "PREFER_OFF"
  startMin    Int?
  endMin      Int?
  note        String?
  updatedAt   DateTime    @updatedAt

  @@unique([periodId, staffUserId, date])
}

model Submission {
  id          String      @id @default(cuid())
  periodId    String
  period      ShiftPeriod @relation(fields: [periodId], references: [id], onDelete: Cascade)
  staffUserId String
  staff       User        @relation(fields: [staffUserId], references: [id], onDelete: Cascade)
  submittedAt DateTime    @default(now())

  @@unique([periodId, staffUserId])
}

model ShiftAssignment {
  id            String      @id @default(cuid())
  periodId      String
  period        ShiftPeriod @relation(fields: [periodId], references: [id], onDelete: Cascade)
  staffUserId   String
  staff         User        @relation(fields: [staffUserId], references: [id], onDelete: Cascade)
  date          DateTime
  startMin      Int
  endMin        Int
  breakMin      Int?        // 休憩時間（分）: 30, 45, 60 のみ許可
  breakStartMin Int?        // 休憩開始時刻（分）- シフト開始からの相対位置
  note          String?
  createdAt     DateTime    @default(now())

  @@unique([periodId, staffUserId, date])
}

model LineLink {
  staffUserId String   @id
  staff       User     @relation(fields: [staffUserId], references: [id], onDelete: Cascade)
  lineUserId  String   @unique
  linkedAt    DateTime @default(now())
}

model LineLinkCode {
  id          String    @id @default(cuid())
  staffUserId String
  staff       User      @relation(fields: [staffUserId], references: [id], onDelete: Cascade)
  code        String    @unique
  expiresAt   DateTime
  usedAt      DateTime?
}
